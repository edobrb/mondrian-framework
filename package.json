{
  "name": "@mondrian-framework/root",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build-docs": "npm run build-docs --workspace=@mondrian-framework/docs",
    "deploy-docs": "npm run deploy-docs --workspace=@mondrian-framework/docs",
    "test": "npm run test --workspaces --if-present",
    "pretty": "prettier --write \"./**/*.ts\"",
    "example": "npm run example --workspace=@mondrian-framework/example",
    "example-serverless": "npm run example-serverless --workspace=@mondrian-framework/example",
    "clear": "rimraf packages/*/build/** && rimraf packages/*/.build/**",
    "clear-modules": "rimraf packages/*/node_modules/**",
    "release-model": "npm run clear && npm run build && npm run release --workspace=@mondrian-framework/model",
    "release-utils": "npm run clear && npm run build && npm run release --workspace=@mondrian-framework/utils"
  },
  "devDependencies": {
    "typescript": "5.0.4",
    "vitest": "0.31.0",
    "prettier": "2.8.8",
    "@trivago/prettier-plugin-sort-imports": "4.1.1",
    "release-it": "15.11.0",
    "rimraf": "4.4.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {}
}
