{
  "name": "@mondrian-framework/root",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build-docs": "npm run build-docs --workspace=@mondrian-framework/docs",
    "deploy-docs": "npm run deploy-docs --workspace=@mondrian-framework/docs",
    "test": "npm run test --workspaces --if-present",
    "pretty": "prettier --write \"./**/*.ts\"",
    "example": "npm run example --workspace=@mondrian-framework/example"
  },
  "devDependencies": {
    "typescript": "5.0.4",
    "vitest": "0.31.0",
    "prettier": "2.8.8",
    "@trivago/prettier-plugin-sort-imports": "4.1.1"
  },
  "workspaces": [
    "packages/docs",
    "packages/utils",
    "packages/model",
    "packages/advanced-types",
    "packages/module",
    "packages/prisma",
    "packages/rest",
    "packages/rest-fastify",
    "packages/graphql",
    "packages/graphql-yoga",
    "packages/aws-sqs",
    "packages/aws-lambda-sqs",
    "packages/cron",
    "packages/example"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {}
}
