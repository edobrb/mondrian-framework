{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noErrorTruncation": false,
    "sourceMap": true,
    "declaration": true,
    "incremental": true,
    "composite": true,
    "skipLibCheck": true,
    "types": [
      "vitest/importMeta"
    ],
    "paths": {
      "@mondrian/docs": [
        "./packages/docs"
      ],
      "@mondrian/utils": [
        "./packages/utils"
      ],
      "@mondrian/model": [
        "./packages/model"
      ],
      "@mondrian/module": [
        "./packages/module"
      ],
      "@mondrian/rest": [
        "./packages/rest"
      ],
      "@mondrian/graphql": [
        "./packages/graphql"
      ],
      "@mondrian/aws-sqs": [
        "./packages/aws-sqs"
      ],
      "@mondrian/cron": [
        "./packages/cron"
      ],
      "@mondrian/example": [
        "./packages/example"
      ]
    }
  },
  "files": [],
  "references": [
    {
      "path": "packages/doc"
    },
    {
      "path": "packages/utils"
    },
    {
      "path": "packages/model"
    },
    {
      "path": "packages/module"
    },
    {
      "path": "packages/rest"
    },
    {
      "path": "packages/aws-sqs"
    },
    {
      "path": "packages/cron"
    },
    {
      "path": "packages/graphql"
    },
    {
      "path": "packages/example"
    }
  ],
  "exclude": [
    "**/node_modules",
    "build"
  ]
}